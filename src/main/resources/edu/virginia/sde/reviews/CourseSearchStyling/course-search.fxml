<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="720.0" maxWidth="1280.0" minHeight="720.0" minWidth="1280.0" prefHeight="720.0" prefWidth="1280.0" stylesheets="@course-search.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.virginia.sde.reviews.controllers.CourseSearchController">
    <children>
        <VBox alignment="CENTER" layoutX="25.0" layoutY="190.0" prefHeight="530.0" prefWidth="1240.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="190.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
            <children>
                <TableView fx:id="courseTable" maxWidth="1210.0" prefHeight="460.0" prefWidth="1210.0">
                    <columns>
                        <TableColumn fx:id="courseDepartmentColumn" minWidth="255.0" reorderable="false" sortType="ASCENDING" text="Course Department" />
                        <TableColumn fx:id="courseNumberColumn" minWidth="200.0" reorderable="false" sortType="ASCENDING" text="Course Number" />
                        <TableColumn fx:id="courseTitleColumn" minWidth="655.0" reorderable="false" sortType="ASCENDING" text="Course Title" />
                        <TableColumn fx:id="courseReviewColumn" minWidth="100.0" reorderable="false" sortType="ASCENDING" text="Rating" />

                    </columns>
                </TableView>
            </children>
        </VBox>
        <Label layoutX="35.0" layoutY="16.0" prefHeight="36.0" prefWidth="171.0" text="Add Course" />
        <VBox />
        <HBox alignment="CENTER_LEFT" layoutX="41.0" layoutY="82.0" prefHeight="42.0" prefWidth="1210.0" spacing="50.0">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="40.0">
                    <children>
                        <TextField fx:id="courseDepartment" alignment="BOTTOM_LEFT" maxWidth="250.0" onKeyPressed="#handleKeyPressed" onMouseClicked="#addCourseErrorHide" prefHeight="39.0" prefWidth="220.0" promptText="Course Department" />
                        <TextField fx:id="courseNumber" alignment="BOTTOM_LEFT" maxWidth="185.0" onKeyPressed="#handleKeyPressed" onMouseClicked="#addCourseErrorHide" prefHeight="20.0" prefWidth="185.0" promptText="Course Number" />
                        <TextField fx:id="courseTitle" alignment="BOTTOM_LEFT" maxWidth="280.0" minWidth="196.0" onKeyPressed="#handleKeyPressed" onMouseClicked="#addCourseErrorHide" prefHeight="39.0" prefWidth="196.0" promptText="Course Title" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="42.0" prefWidth="359.0" spacing="75.0">
                    <children>
                        <Button fx:id="addCourse" alignment="BOTTOM_CENTER" lineSpacing="30.0" minWidth="-Infinity" mnemonicParsing="false" onAction="#addCourse" text="Add Course" textAlignment="CENTER" />
                        <HBox alignment="CENTER_RIGHT" prefHeight="42.0" prefWidth="179.0" spacing="20.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#switchToMyReviewsScene" prefWidth="99.0" text="My Reviews" />
                                <Button fx:id="logout" mnemonicParsing="false" onAction="#switchToLoginScene" text="Logout" />
                            </children>
                        </HBox>
                    </children>
                </HBox>
            </children>
        </HBox>
      <HBox alignment="CENTER_LEFT" layoutX="40.0" layoutY="131.0" prefHeight="40.0" prefWidth="860.0" spacing="10.0">
         <children>
              <Label fx:id="departmentTooShortError" maxHeight="20.0" minHeight="20.0" text="Department is Incorrect" textFill="#c70000" visible="false" />
            <HBox alignment="CENTER" prefHeight="40.0" prefWidth="210.0">
               <children>
                    <Label fx:id="catalogIncorrectError" alignment="CENTER" maxHeight="20.0" minHeight="20.0" prefHeight="20.0" prefWidth="192.0" text="Catalog Number Incorrect" visible="false" />
               </children>
            </HBox>
            <StackPane>
               <children>
                    <Label fx:id="titleTooLongError" alignment="CENTER" maxHeight="40.0" minHeight="20.0" prefHeight="40.0" prefWidth="150.0" text="Title Too Long" visible="false" />
                    <Label fx:id="titleTooShortError" maxHeight="20.0" minHeight="20.0" text="Title is Too Short" visible="false" />
               </children>
            </StackPane>
         </children>
      </HBox>
        <HBox alignment="CENTER_LEFT" layoutX="41.0" layoutY="156.0" minWidth="506.0" prefHeight="30.0" prefWidth="506.0">
            <children>
                <TextField fx:id="courseSearch" maxWidth="370.0" onKeyPressed="#handleKeyPressed" prefHeight="30.0" prefWidth="340.0" promptText="Search" />
            </children>
        </HBox>
      <Label fx:id="courseAlreadyExistsError" layoutX="703.0" layoutY="132.0" text="Course Already Exists" visible="false" />
      <Label fx:id="courseAddedLabel" layoutX="703.0" layoutY="132.0" text="Course Added Successfully" visible="false" />

    </children>
</AnchorPane>
